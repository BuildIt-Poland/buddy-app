{
  "name": "buddy-app",
  "description": "A PWA app that aims to help Buddy and Newbie go through the induction process.",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/react-hooks": "^3.1.1",
    "@apollo/react-testing": "^3.1.1",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.8",
    "@types/react": "^16.9.4",
    "@types/react-dom": "16.9.1",
    "apollo-boost": "^0.4.4",
    "graphql": "^14.5.8",
    "react": "^16.10.1",
    "react-apollo": "^3.1.1",
    "react-dom": "^16.10.1",
    "react-scripts": "3.1.2",
    "typescript": "3.6.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "server": "npm start --prefix server",
    "postinstall": "npm install --prefix server",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "npm run test -- --no-watch",
    "prettier": "prettier src/**/*.ts src/**/*.tsx --write",
    "pre-commit": "lint-staged",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*.{tsx,ts, js}": [
      "npm run lint:fix",
      "npm run prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "3.0.5",
    "lint-staged": "9.4.0",
    "prettier": "^1.18.2"
  }
}
