{
  "name": "buddy-app",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@bahmutov/add-typescript-to-cypress",
      "**/@bahmutov/add-typescript-to-cypress/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --parallel --stream precommit"
    }
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lerna": "^3.20.2"
  }
}
