{
  "name": "buddy-app",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "pre-commit": "lint-staged"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@bahmutov/add-typescript-to-cypress",
      "**/@bahmutov/add-typescript-to-cypress/**"
    ]
  },
  "lint-staged": {
    "*.{tsx,ts, js}": [
      "lerna run lint:fix",
      "lerna run prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "devDependencies": {
    "husky": "^4.2.1",
    "lerna": "^3.8.0",
    "lint-staged": "^10.0.7"
  }
}
