{
  "name": "buddy-app",
  "description": "A PWA app that aims to help Buddy and Newbie go through the induction process.",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "services": "npm start --prefix services",
    "postinstall": "npm install --prefix services && npm install --prefix schema",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "lint:fix": "eslint ./src/**/*.{ts,tsx} --fix",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cy:open": "cypress open",
    "cy:run": "cypress run --browser chrome",
    "cy:ci": "start-server-and-test start http://localhost:3000 cy:run",
    "coverage": "npm test -- --coverage --watchAll=false",
    "prettier": "prettier ./src/**/*.{ts,tsx} --write",
    "pre-commit": "lint-staged",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.1",
    "@apollo/react-testing": "^3.1.1",
    "@buildit/gravity-particles": "^0.3.0",
    "@material-ui/core": "^4.5.0",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.39",
    "@types/dompurify": "^2.0.0",
    "@types/dotenv": "6.1.1",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.8",
    "@types/react": "^16.9.4",
    "@types/react-dom": "16.9.1",
    "@types/react-html-parser": "^2.0.1",
    "@types/react-router-dom": "5.1.0",
    "apollo-boost": "^0.4.4",
    "dompurify": "^2.0.7",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-html-parser": "^2.0.2",
    "react-router-dom": "5.1.2",
    "react-scripts": "^3.3.0",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@testing-library/jest-dom": "^4.1.2",
    "@testing-library/react": "^9.3.0",
    "@types/js-cookie": "^2.2.3",
    "@types/react-test-renderer": "^16.9.0",
    "apollo-server-lambda": "^2.9.16",
    "buddy-app-schema": "file:schema",
    "clsx": "^1.0.4",
    "cypress": "^3.4.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "husky": "3.0.5",
    "js-cookie": "^2.2.1",
    "lint-staged": "9.4.0",
    "prettier": "^1.18.2",
    "react-hook-form": "^3.24.0",
    "react-test-renderer": "^16.10.1",
    "start-server-and-test": "^1.10.4",
    "wait-for-expect": "^3.0.0",
    "webpack-graphql-loader": "^1.0.2"
  },
  "lint-staged": {
    "*.{tsx,ts, js}": [
      "npm run lint:fix",
      "npm run prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{tsx,ts}",
      "!src/styles/*",
      "!src/__mocks__/*",
      "!src/shared/*",
      "!src/graphql/*",
      "!src/context/*",
      "!src/index.tsx",
      "!src/utils/apollo-client/",
      "!src/serviceWorker.ts",
      "!<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "buddy-app-schema": "<rootDir>/src/__mocks__/schema.ts"
    }
  }
}
