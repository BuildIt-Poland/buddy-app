{
  "name": "@buddy-app/client",
  "description": "A PWA app that aims to help Buddy and Newbie go through the induction process.",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/BuildIt-Poland/buddy-app/",
    "directory": "packages/client"
  },
  "scripts": {
    "start": "react-scripts start",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "lint:fix": "eslint ./src/**/*.{ts,tsx} --fix",
    "build": "react-scripts build",
    "deploy": "serverless",
    "test": "react-scripts test",
    "cy:open": "cypress open",
    "cy:run": "cypress run --browser chrome",
    "cy:ci": "REACT_APP_SERVER_URL= start-test 3000 cy:run",
    "coverage": "yarn test --coverage --watchAll=false",
    "prettier": "prettier ./src/**/*.{ts,tsx} --write",
    "eject": "react-scripts eject",
    "lighthouse": "lhci autorun",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@buddy-app/schema": "0.1.0",
    "@buildit/gravity-particles": "^0.6.1",
    "@material-ui/core": "^4.9.3",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.43",
    "apollo-boost": "^0.4.7",
    "apollo-cache-persist": "^0.1.1",
    "apollo-link-queue": "^2.2.0",
    "apollo-link-retry": "^2.2.16",
    "apollo-link-serialize": "^3.1.1",
    "dompurify": "^2.0.8",
    "localforage": "^1.7.4",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-html-parser": "^2.0.2",
    "react-router-dom": "5.1.2",
    "react-scripts": "^3.4.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.3",
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@buddy-app/schema": "file:../schema",
    "@lhci/cli": "^0.3.8",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/dompurify": "^2.0.1",
    "@types/jest": "25.1.2",
    "@types/js-cookie": "^2.2.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "13.7.1",
    "@types/react": "^16.9.20",
    "@types/react-dom": "16.9.5",
    "@types/react-html-parser": "^2.0.1",
    "@types/react-router-dom": "5.1.3",
    "@types/react-test-renderer": "^16.9.2",
    "apollo-server-lambda": "^2.10.1",
    "clsx": "^1.1.0",
    "cypress": "^4.0.2",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-cypress": "^2.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.6",
    "js-cookie": "^2.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "react-hook-form": "^4.9.6",
    "react-test-renderer": "^16.12.0",
    "serverless": "^1.65.0",
    "start-server-and-test": "^1.10.8",
    "wait-for-expect": "^3.0.2",
    "webpack": "^4.41.6",
    "webpack-graphql-loader": "^1.0.2"
  },
  "lint-staged": {
    "*.{tsx,ts, js}": [
      "yarn lint:fix",
      "yarn prettier"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "src/atoms/**/*.{tsx,ts}",
      "src/components/**/*.{tsx,ts}",
      "src/pages/**/*.{tsx,ts}",
      "src/hooks/**/*.{tsx,ts}",
      "src/utils/**/*.{tsx,ts}",
      "!src/utils/apollo-client/*",
      "!src/**/index.ts",
      "!src/**/types.ts"
    ],
    "moduleNameMapper": {
      "@buddy-app/schema": "<rootDir>/src/__mocks__/schema.ts"
    }
  }
}
