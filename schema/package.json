{
  "name": "buddy-app-schema",
  "version": "1.0.0",
  "description": "Buddy App graphQL schema module",
  "main": "build/index.js",
  "license": "ISC",
  "scripts": {
    "copy": "copyfiles schema.json './src/generated/schema.json' ./build/",
    "codegen": "graphql-codegen",
    "build": "npx tsc && npm run copy",
    "postinstall": "npm run build",
    "upgrade": "npm run codegen && npm run build"
  },
  "dependencies": {
    "copyfiles": "^2.1.1"
  },
  "devDependencies": {
    "@graphql-codegen/introspection": "^1.11.2",
    "@graphql-codegen/typescript": "^1.11.2",
    "@graphql-codegen/typescript-resolvers": "^1.11.2",
    "graphql-codegen": "^0.4.0",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "graphql": "^14.5.8",
    "typescript": "^3.7.4"
  }
}
